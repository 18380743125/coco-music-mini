page {
  background-color: #fafafa;
  padding: 0 12rpx;
  box-sizing: border-box;
}

/* 搜索框 */
.van-search {
  padding: 20rpx 0 !important;
}
.van-search__content {
  background-color: #fff !important;
}

/* 轮播图 */
.swiper-item {
  display: flex;
  border-radius: 8rpx;
}
.swiper-item .swiper-image {
  width: 100%;
}
.ranking {
  padding-bottom: 6rpx;
}

/* 播放工具栏 */
.play-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 8px;
  position: fixed;
  left: 0;
  right: 0;
  height: 44px;
  bottom: 0;
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
  background: #fafafa;
}
.play-bar .left,
.play-bar .right {
  display: flex;
  align-items: center;
}
.play-bar .left .album {
  position: relative;
  top: -4px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.play-bar .left .name {
  font-size: 14px;
  margin-left: 20rpx;
}
.play-bar .right .icon {
  width: 30px;
  height: 30px;
}
.play-bar .right .play {
  width: 25px;
  height: 25px;
  margin-right: 10rpx;
  padding: 18px;
}
.play-bar-placeholder {
  padding-top: 44px;
}

/* album 动画 */
@keyframes albumRotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
.album-anim {
  animation: albumRotate 16s linear infinite;
}